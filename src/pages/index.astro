	}
	.CardsAparece {
		animation: 2.2s alternate animationPrinc;
	}
	@keyframes animationPrincC {
		from {
			opacity: 0;
		}
		to {
			opacity: 0.5;
		}
	}
	@keyframes animationPrinc {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
	@keyframes animationDesv {
		from {
